{
  "name": "file-compressor",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ffmpeg/core": "^0.11.0",
    "@ffmpeg/ffmpeg": "^0.11.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^27.5.2",
    "@types/jszip": "^3.4.0",
    "@types/node": "^16.18.126",
    "@types/pizzip": "^3.0.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "browser-image-compression": "^2.0.2",
    "docx": "^9.5.1",
    "express": "^4.21.2",
    "http-proxy-middleware": "^3.0.3",
    "jszip": "^3.10.1",
    "lamejs": "^1.2.1",
    "pdf-lib": "^1.17.1",
    "pizzip": "^3.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "utif": "^3.1.0",
    "wav-encoder": "^1.3.0",
    "web-vitals": "^5.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "dev": "concurrently \"BROWSER=none react-scripts start\" \"sleep 3 && NODE_ENV=development node server.js\"",
    "build": "react-scripts build",
    "build:safe": "DISABLE_ESLINT_PLUGIN=true react-scripts build",
    "serve": "NODE_ENV=production node server.js",
    "test": "react-scripts test",
    "lint": "eslint src/**/*.{ts,tsx} --max-warnings 50",
    "lint:fix": "eslint --fix src/**/*.{ts,tsx} --max-warnings 50",
    "lint:check": "eslint src/**/*.{ts,tsx} --max-warnings 0",
    "format": "prettier --write src/**/*.{ts,tsx,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,css,md}",
    "precommit": "npm run format && npm run lint:fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "@typescript-eslint/no-unused-vars": "warn"
    }
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@ffmpeg|browser-image-compression)/)"
    ],
    "moduleNameMapper": {
      "@ffmpeg/ffmpeg": "<rootDir>/src/mocks/ffmpegMock.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2"
  }
}
